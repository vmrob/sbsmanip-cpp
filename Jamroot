path-constant TOP : . ;

lib pugixml : [ glob deps/pugixml/src/*.cpp ] :
	<link>static
	<toolset>darwin:<cxxflags>"-std=c++1y -fcolor-diagnostics"
	<runtime-link>static
: :
	<include>$(TOP)/deps/pugixml/src
;

lib curl ;

lib curlpp-utils : :
	<file>$(TOP)/deps/lib/libutilspp.a
: :
	<include>$(TOP)/deps/include
;

lib curlpp : :
	<file>$(TOP)/deps/lib/libcurlpp.a
: :
	<include>$(TOP)/deps/include
	<library>curlpp-utils
	<library>curl
;

cpp-pch pch : src/pch.h :
	<library>pugixml
	<library>curlpp
	<toolset>darwin:<cxxflags>"-std=c++1y -fcolor-diagnostics"
	<toolset>darwin:<define>HAS_MAKE_UNIQUE
: :
	<library>pugixml
	<library>curlpp
	<toolset>darwin:<cxxflags>"-std=c++1y -fcolor-diagnostics"
	<toolset>darwin:<define>HAS_MAKE_UNIQUE
;

lib sbsmanip : [ glob src/*.cpp ] pch :
	<link>static
	<runtime-link>static
:
	<link>static
	<runtime-link>static
:
	<include>$(TOP)/src
;

actions convenience-header {
	$(TOP)/generate-convenience-header.py
}

import notfile ;
notfile sbsmanip-h : @convenience-header ;

# explicit sbsmanip-h ;

